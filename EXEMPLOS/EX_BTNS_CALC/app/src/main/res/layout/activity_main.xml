                    android:onClick="onClickBtn"
                    android:text="8"
                    android:textColor="#252B49"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp"
                    app:rippleColor="#FFFFFF" />

